#include <stdio.h>
int main() {
    int a[] = {2,4,6,8,10,12};
    int n = 6, x = 10;
    int l = 0, r = n - 1, mid;

    while(l <= r){
        mid = (l + r) / 2;
        if(a[mid] == x){
            printf("Found at index %d", mid);
            return 0;
        }
        else if(a[mid] < x) l = mid + 1;
        else r = mid - 1;
    }
    printf("Not Found");
}