#include <stdio.h>

int main() {
    int n;

    // Taking array size
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int a[n];

    // Taking input
    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++)
        scanf("%d", &a[i]);

    // Bubble Sort in Descending Order
    for(int i = 0; i < n - 1; i++) {
        for(int j = 0; j < n - i - 1; j++) {
            if(a[j] < a[j + 1]) {
                int temp = a[j];
                a[j] = a[j + 1];
                a[j + 1] = temp;
            }
        }
    }